datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  firstName String
  lastName String
  username String @unique
  password String
  
  @@map("users")

}
model Content {
  C_id       Int    @id @default(autoincrement())
  name String @unique
  password String
  
  @@map("content")

}
model PageType {
  type_id     Int       @id @default(autoincrement())
  type_name   String
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  // Add this field to establish the relationship
  singlePages SinglePage[]
    @@map("page_type")

}

model SinglePage {
  id              Int       @id @default(autoincrement())
  title           String
  content         Json
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  timestamp_create DateTime
  title_images    String
  pagelink        String
  type_id         Int
  type            PageType  @relation(fields: [type_id], references: [type_id])
  @@map("single_page")
}


