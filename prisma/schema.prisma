datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  login     Login?

  @@map("users")
}

model Login {
  id       Int    @id @default(autoincrement())
  username String
  password String
  // Add a foreign key to User
  user     User   @relation(fields: [userId], references: [id])
  userId   Int    @unique

  @@map("login")
}

model PageType {
  id        Int          @id @default(autoincrement())
  typeName  String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  pages     SinglePage[]

  @@map("page_type")
}

model SinglePage {
  id              Int       @id @default(autoincrement())
  title           String
  content         Json
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  timestampCreate DateTime
  titleImages     String
  pageLink        String?
  isActive        Boolean
  type            PageType? @relation(fields: [typeId], references: [id])
  typeId          Int?
  tag             Json?
  @@map("single_pages")
}

model Tag {
  id      Int    @id @default(autoincrement())
  tagName String
  @@map("tag")
}

model ManageMenu {
  id        Int         @id @default(autoincrement())
  menuName  String
  pathMenu      String?
  isActive  Boolean
  parent    ManageMenu? @relation("ManageMenuChildren", fields: [parentId], references: [id])
  icons     String
  parentId  Int?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  children ManageMenu[] @relation("ManageMenuChildren")

  @@map("manage_menu")
}
